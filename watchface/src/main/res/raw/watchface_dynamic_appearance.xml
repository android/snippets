<WatchFace width="450" height="450">
    <Scene>
        <PartDraw x="0" y="0" width="450" height="450">
            <!-- [START android_watch_face_dynamic_appearance_arc] -->
            <Arc centerX="225" centerY="225" height="420" width="420" startAngle="0" endAngle="0">
                <Transform target="endAngle" value="[STEP_PERCENT] * 3.6" />
                <Stroke color="#FF00FF" thickness="20" />
            </Arc>
            <!-- [END android_watch_face_dynamic_appearance_arc] -->
        </PartDraw>

        <!-- [START android_watch_face_dynamic_appearance_balls] -->
        <PartDraw x="100" y="150" width="250" height="120" >
            <Ellipse x="0" y="0" width="50" height="50">
                <Fill color="#ff0000" />
                <!-- Red ball with no animated transition -->
                <Transform target="x" value="[SECOND] % 2 == 0 ? 0 : 200"/>
            </Ellipse>
            <Ellipse x="0" y="100" width="50" height="50">
                <Fill color="#00ff00" />
                <!-- Green ball eases between each position -->
                <Transform target="x" value="[SECOND] % 2 == 0 ? 0 : 200">
                    <Animation duration="1" interpolation="EASE_IN_OUT" />
                </Transform>
            </Ellipse>
        </PartDraw>
        <!-- [END android_watch_face_dynamic_appearance_balls] -->

        <!-- [START android_watch_face_dynamic_appearance_agif] -->
        <PartAnimatedImage x="0" y="0" width="450" height="450">
            <AnimationController play="ON_VISIBLE"/>
            <AnimatedImage resource="animation" format="AGIF"/>
            <Thumbnail resource="animation_thumbnail" />
        </PartAnimatedImage>
        <!-- [END android_watch_face_dynamic_appearance_agif] -->
    </Scene>
</WatchFace>
