<WatchFace width="450" height="450">
    <!-- [START android_watch_face_photos_configuration_setup] -->
    <!-- Under WatchFace element -->
    <UserConfigurations>
        <PhotosConfiguration id="photoConfig" configType="SINGLE"/>
    </UserConfigurations>
    <!-- [END android_watch_face_photos_configuration_setup] -->

    <Scene>
        <!-- [START android_watch_face_photo_image] -->
        <PartImage x="100" y="50" width="100" height="100">
            <Photos source="[CONFIGURATION.photoConfig]" defaultImageResource="default_image"/>
        </PartImage>
        <!-- [END android_watch_face_photo_image] -->
    </Scene>
</WatchFace>
