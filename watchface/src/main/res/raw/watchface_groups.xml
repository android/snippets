<WatchFace width="450" height="450">
    <Scene>
        <!-- [START android_watch_face_groups] -->
        <Group name="decorations" x="100" y="100" width="200" height="200">
            <!-- PartText, PartImage, PartDraw elements go here -->
        </Group>
        <!-- [END android_watch_face_groups] -->

        <!-- [START android_watch_face_groups_ambient] -->
        <Group name="decorations" x="100" y="100" width="200" height="200">
            <Variant mode="AMBIENT" target="alpha" value="0" />
            <!-- PartText, PartImage, PartDraw elements go here -->
        </Group>
        <!-- [END android_watch_face_groups_ambient] -->

        <!-- [START android_watch_face_groups_rotate] -->
        <Group name="decorations" x="100" y="100" width="200" height="200">
            <!-- One full rotation per minute -->
            <Transform target="angle" value="[SECOND] * 6" />
            <!-- PartText, PartImage, PartDraw elements go here -->
        </Group>
        <!-- [END android_watch_face_groups_rotate] -->
    </Scene>
</WatchFace>
